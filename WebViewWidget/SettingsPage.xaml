<Page x:Class="WebViewWidget.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:WebViewWidget"
      Title="Settings"
      Background="#121316">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">

            <!-- Header -->
            <TextBlock Text="⚙️ Settings"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#E6E6E6"
                       Margin="0,0,0,4"/>

            <Border Background="#15171B"
                    BorderBrush="#25272C"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="16"
                    Margin="0,12,0,16">
                <StackPanel>
                    <TextBlock Text="Language"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#E6E6E6"/>
                    <TextBlock Text="Choose the display language for the app."
                               Margin="0,4,0,12"
                               Foreground="#A9B1BB"/>

                    <ComboBox x:Name="LanguageCombo"
                              Style="{StaticResource DarkComboBox}"
                              Width="320"
                              Height="38"
                              Padding="10,6"
                              FontSize="15"
                              HorizontalAlignment="Left"
                              SelectedValuePath="Tag"
                              SelectedValue="{Binding Language, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              SelectionChanged="LanguageCombo_SelectionChanged" Opacity="20" Foreground="{DynamicResource Clr.AccentText}" BorderBrush="{DynamicResource Clr.Border}" Background="{DynamicResource Clr.Accent}" OpacityMask="{DynamicResource Clr.AccentText}">
                        <ComboBoxItem Content="English"            Tag="en"/>
                        <ComboBoxItem Content="中文 (Chinese)"      Tag="zh"/>
                        <ComboBoxItem Content="日本語 (Japanese)"    Tag="ja"/>
                        <ComboBoxItem Content="한국어 (Korean)"     Tag="ko"/>
                        <ComboBoxItem Content="Español (Spanish)"  Tag="es"/>
                    </ComboBox>

                    <TextBlock Margin="0,8,0,0"
                               Foreground="#A9B1BB"
                               FontSize="12">
                        <Run Text="Current: "/>
                        <Run Text="{Binding Language}"/>
                    </TextBlock>
                </StackPanel>
            </Border>


            <!-- Premium Features Section -->
            <Border Padding="16" CornerRadius="12" Background="#15171B">
                <StackPanel>
                    <TextBlock Text="Premium Features"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#E6E6E6"/>
                    <TextBlock Text="Unlock more power for dedicated traders and creators."
                               Margin="0,4,0,12"
                               Foreground="#A9B1BB"/>

                    <!-- Benefits list -->
                    <StackPanel>
                        <TextBlock Foreground="#E6E6E6">• Real-time quotes and faster refresh rates</TextBlock>
                        <TextBlock Foreground="#E6E6E6">• Advanced charts with multi-panel and indicator support</TextBlock>
                        <TextBlock Foreground="#E6E6E6">• Full options chains and Greek analytics</TextBlock>
                        <TextBlock Foreground="#E6E6E6">• Multiple portfolios and personalized watchlists</TextBlock>
                        <TextBlock Foreground="#E6E6E6">• Priority customer support and early feature access</TextBlock>
                    </StackPanel>

                    <!-- Pricing note -->
                    <TextBlock Margin="0,12,0,4"
                               FontSize="14"
                               Foreground="#FFD700"
                               FontWeight="Bold">
                        Only $9.99 — first 500 Microsoft Store reviews get Premium free!
                    </TextBlock>

                    <!-- Enroll link -->
                    <Button Content="Get Premium on Microsoft Store"
                            Margin="0,8,0,0"
                            Padding="10,6"
                            FontWeight="SemiBold"
                            FontSize="14"
                            Foreground="#121316"
                            Background="#FFD700"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            Click="OpenMicrosoftStore_Click"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
