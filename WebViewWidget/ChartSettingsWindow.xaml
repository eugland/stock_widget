<Window x:Class="WebViewWidget.ChartSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chart Configuration" Height="300" Width="400"
        Background="#111827" Foreground="White">
    <StackPanel Margin="20">
        <TextBlock Text="Configure Chart for [Stock Symbol]" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

        <TextBlock Text="Select Currency"/>
        <ComboBox x:Name="CurrencyComboBox" SelectedIndex="0" Margin="0,0,0,15">
            <ComboBoxItem Content="USD ($)"/>
            <ComboBoxItem Content="EUR (€)"/>
            <ComboBoxItem Content="GBP (£)"/>
        </ComboBox>

        <TextBlock Text="Display Duration" />
        <ComboBox x:Name="DurationComboBox" SelectedIndex="1" Margin="0,0,0,25">
            <ComboBoxItem Content="1 Day"/>
            <ComboBoxItem Content="1 Week"/>
            <ComboBoxItem Content="1 Month"/>
            <ComboBoxItem Content="1 Year"/>
        </ComboBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" IsCancel="True" Margin="0,0,10,0" Padding="10,5"/>
            <Button Content="Save" IsDefault="True" Click="SaveButton_Click" Padding="10,5"/>
        </StackPanel>
    </StackPanel>
</Window>