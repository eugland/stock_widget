<Window x:Class="WebViewWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Widget"
        Width="800" Height="500"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        ShowInTaskbar="True"
        Topmost="False"
        Loaded="Window_Loaded">

    <!-- Fill the window with WebView2 -->

    <Border BorderBrush="Magenta" BorderThickness="2" Margin="0" SnapsToDevicePixels="True">
        <wv2:WebView2 x:Name="Web"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      DefaultBackgroundColor="#FFFFFFFF"/>
    </Border>

</Window>