<Window x:Class="WebViewWidget.TickerManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stock Widgets"
        Width="980" Height="640"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        SnapsToDevicePixels="True" UseLayoutRounding="True"
        WindowStartupLocation="CenterScreen">

    <!-- ============ THEME ============ -->
    <Window.Resources>
        <!-- Colors -->
        <Color x:Key="WinBg1">#13151A</Color>
        <Color x:Key="WinBg2">#0F1116</Color>
        <Color x:Key="Panel">#181C22</Color>
        <Color x:Key="PanelAlt">#1E232B</Color>
        <Color x:Key="Border">#2B3440</Color>
        <Color x:Key="Accent">#4AE08E</Color>
        <Color x:Key="AccentDim">#2AA86E</Color>
        <Color x:Key="Text">#E9EEF5</Color>
        <Color x:Key="SubText">#9AA3AE</Color>

        <!-- Brushes -->
        <LinearGradientBrush x:Key="WindowChromeBg" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{StaticResource WinBg1}" Offset="0"/>
            <GradientStop Color="{StaticResource WinBg2}" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="Card" Color="{StaticResource Panel}"/>
        <SolidColorBrush x:Key="CardAlt" Color="{StaticResource PanelAlt}"/>
        <SolidColorBrush x:Key="Stroke" Color="{StaticResource Border}"/>
        <SolidColorBrush x:Key="FG" Color="{StaticResource Text}"/>
        <SolidColorBrush x:Key="FGSub" Color="{StaticResource SubText}"/>
        <SolidColorBrush x:Key="Hi" Color="{StaticResource Accent}"/>
        <SolidColorBrush x:Key="HiDim" Color="{StaticResource AccentDim}"/>

        <!-- Buttons -->
        <Style TargetType="Button" x:Key="PrimaryBtn">
            <Setter Property="Foreground" Value="{StaticResource FG}"/>
            <Setter Property="Background" Value="{StaticResource CardAlt}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#242A33"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#20252D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle (On/Off) -->
        <Style TargetType="ToggleButton" x:Key="Switch">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Track" CornerRadius="13" Background="#2A313A" />
                            <Border x:Name="Thumb" Width="20" Height="20" CornerRadius="10"
                                    Background="White" Margin="3,3,0,3" HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="{StaticResource Hi}"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,3,3,3"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Track" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slider -->
        <Style TargetType="Slider" x:Key="NiceSlider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Margin="2">
                            <Rectangle Height="4" RadiusX="2" RadiusY="2" Fill="#2A313A" VerticalAlignment="Center"/>
                            <Rectangle Height="4" RadiusX="2" RadiusY="2" Fill="{StaticResource Hi}" VerticalAlignment="Center"
                                       Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, Converter={StaticResource SliderWidthConverter}, ConverterParameter={TemplateBinding ActualWidth}}"/>
                            <Thumb Width="16" Height="16" Background="White" BorderBrush="#99FFFFFF" BorderThickness="1"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="{TemplateBinding Value}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Pill list items (subscriptions) -->
        <Style TargetType="ListBoxItem" x:Key="PillItem">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Foreground" Value="{StaticResource FG}"/>
            <Setter Property="Background" Value="{StaticResource CardAlt}"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="bg" CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource Stroke}" BorderThickness="1">
                            <ContentPresenter Margin="6,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#262C36"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#2F3743"/>
                                <Setter TargetName="bg" Property="BorderBrush" Value="{StaticResource Hi}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title text style -->
        <Style TargetType="TextBlock" x:Key="Title">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource FG}"/>
        </Style>
    </Window.Resources>

    <!-- ============ OUTER CHROME ============ -->
    <Border CornerRadius="16" Background="{StaticResource WindowChromeBg}" Padding="10">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.45" ShadowDepth="0" BlurRadius="24"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>   <!-- left rail -->
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>    <!-- main -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>     <!-- titlebar -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titlebar -->
            <Grid Grid.ColumnSpan="3" Background="{StaticResource WindowChromeBg}" MouseLeftButtonDown="TitleBar_Drag">
                <TextBlock Text="Stock Desktop Widget" Foreground="{StaticResource FGSub}" Margin="12,0,0,0" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,6,0">
                    <Button Style="{StaticResource PrimaryBtn}" Width="34" Height="26" Click="Min_Click">â€”</Button>
                    <Button Style="{StaticResource PrimaryBtn}" Width="34" Height="26" Margin="6,0,0,0" Click="Close_Click">X</Button>
                </StackPanel>
            </Grid>

            <!-- LEFT RAIL -->
            <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource Card}" CornerRadius="12" Padding="12"
                    BorderBrush="{StaticResource Stroke}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Add symbol -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <TextBlock Text="Enter symbol (e.g., SPY)" Foreground="{StaticResource FGSub}" Margin="2,0,0,8"/>
                    </StackPanel>
                    <DockPanel Grid.Row="2">
                        <Button Style="{StaticResource PrimaryBtn}" Content="Save" Click="Save_Click" DockPanel.Dock="Right"/>
                        <Button Style="{StaticResource PrimaryBtn}" Content="Add" Click="Add_Click" DockPanel.Dock="Right" Margin="0,0,8,0"/>
                        <TextBox x:Name="SymbolBox" Width="150"
                                 Background="{StaticResource CardAlt}" Foreground="{StaticResource FG}"
                                 BorderBrush="{StaticResource Stroke}" BorderThickness="1"
                                 Padding="8,6" />
                    </DockPanel>

                    <!-- Subscriptions -->
                    <TextBlock Grid.Row="4" Text="Subscriptions" Foreground="{StaticResource FGSub}" Margin="2,8,0,6"/>
                    <ListBox Grid.Row="4" x:Name="SymbolsList" Margin="0,24,0,0" SelectionMode="Extended"
                             Background="{StaticResource CardAlt}" BorderBrush="{StaticResource Stroke}" BorderThickness="1">
                        <ListBox.ItemContainerStyle>
                            <Style BasedOn="{StaticResource PillItem}" TargetType="ListBoxItem"/>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <!-- Bottom hint -->
                    <TextBlock Grid.Row="6" Text="Tip: Ctrl/Shift to multi-select. Double-click tray icon to open manager."
                               Foreground="{StaticResource FGSub}" FontSize="11" TextWrapping="WrapWithOverflow"/>
                </Grid>
            </Border>

            <!-- MAIN PANEL -->
            <Border Grid.Row="1" Grid.Column="2" Background="{StaticResource Card}" CornerRadius="12" Padding="16"
                    BorderBrush="{StaticResource Stroke}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ElementName=SymbolsList, Path=SelectedItem, FallbackValue=Select a symbol}"
                                   Style="{StaticResource Title}" Margin="4,0,12,0"/>
                        <TextBlock Text="Core info" Foreground="{StaticResource Hi}" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"/>
                    </StackPanel>

                    <!-- Tabs -->
                    <TabControl Grid.Row="2" Background="{StaticResource Card}" BorderBrush="{StaticResource Stroke}" BorderThickness="1">
                        <!-- General -->
                        <TabItem Header="General">
                            <Grid Background="{StaticResource Card}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
                                    <TextBlock Text="Enable widget" Width="180" Foreground="{StaticResource FG}"/>
                                    <ToggleButton x:Name="EnableToggle" Style="{StaticResource Switch}" IsChecked="True"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center">
                                    <TextBlock Text="Widget opacity" Width="180" Foreground="{StaticResource FG}"/>
                                    <Slider x:Name="OpacitySlider" Minimum="0.6" Maximum="1.0" Value="0.95" Width="220"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="4" VerticalAlignment="Center">
                                    <TextBlock Text="Time range" Width="180" Foreground="{StaticResource FG}"/>
                                    <ComboBox x:Name="RangeCombo" Width="220"
                                              ItemsSource="{Binding}"
                                              SelectedIndex="0">
                                        <ComboBoxItem Content="1 Day"/>
                                        <ComboBoxItem Content="5 Days"/>
                                        <ComboBoxItem Content="1 Month"/>
                                        <ComboBoxItem Content="6 Months"/>
                                        <ComboBoxItem Content="1 Year"/>
                                        <ComboBoxItem Content="Max"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="6" HorizontalAlignment="Right">
                                    <Button Style="{StaticResource PrimaryBtn}" Content="Launch Selected" Width="180" Click="Launch_Click"/>
                                    <Button Style="{StaticResource PrimaryBtn}" Content="Remove Selected" Width="180" Margin="10,0,0,0" Click="Remove_Click"/>
                                </StackPanel>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Notifications">
                            <Grid Background="{StaticResource Card}">
                                <StackPanel Orientation="Vertical" >
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="Price alert" Width="180" Foreground="{StaticResource FG}"/>
                                        <ToggleButton Style="{StaticResource Switch}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Notify if below" Width="180" Foreground="{StaticResource FG}"/>
                                        <TextBox Width="120" Background="{StaticResource CardAlt}" Foreground="{StaticResource FG}"
                                                 BorderBrush="{StaticResource Stroke}" BorderThickness="1" Padding="6,4"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Holdings">
                            <Grid Background="{StaticResource Card}" >
                                <TextBlock Text="Simulated holdings coming soonâ€¦" Foreground="{StaticResource FGSub}"/>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Shared Settings">
                            <Grid Background="{StaticResource Card}" >
                                <TextBlock Text="Global settings (theme, autostart, cache)â€¦" Foreground="{StaticResource FGSub}"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>